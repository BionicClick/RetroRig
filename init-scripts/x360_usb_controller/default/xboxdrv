# How many Controllers? (support up to 4 Controllers)
CONTROLLER_NUM=4

case $CONTROLLER_NUM in
    1) CONTROLLER="-i 0 -l 2 --trigger-as-button --dpad-as-button --mimic-xpad"
    ;;
    2) CONTROLLER="-i 0 -l 2 --trigger-as-button --dpad-as-button --mimic-xpad --next-controller -i 1 -l 3 --trigger-as-button --dpad-as-button --mimic-xpad"
    ;;
    3) CONTROLLER="-i 0 -l 2 --trigger-as-button --dpad-as-button --mimic-xpad --next-controller -i 1 -l 3 --trigger-as-button --dpad-as-button --mimic-xpad --next-controller -i 2 -l 4 --trigger-as-button --dpad-as-button --mimic-xpad"
    ;;
    4) CONTROLLER="-i 0 -l 2 --trigger-as-button --dpad-as-button --mimic-xpad --next-controller -i 1 -l 3 --trigger-as-button --dpad-as-button --mimic-xpad --next-controller -i 2 -l 4 --trigger-as-button --dpad-as-button --mimic-xpad --next-controller -i 3 -l 5 --trigger-as-button --dpad-as-button --mimic-xpad"
    ;;
    *) CONTROLLER="incorrect amount of controller specified"
    ;;
esac
