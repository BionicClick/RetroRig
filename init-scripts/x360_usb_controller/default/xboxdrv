# How many Controllers? (support up to 4 Controllers)
CONTROLLER_NUM=4

case $CONTROLLER_NUM in
    1) CONTROLLER="-l 2 --trigger-as-button --dpad-as-button"
    ;;
    2) CONTROLLER="-l 2 --trigger-as-button --dpad-as-button --next-controller -l 3 --trigger-as-button --dpad-as-button"
    ;;
    3) CONTROLLER="-l 2 --trigger-as-button --dpad-as-button --next-controller -l 3 --trigger-as-button --dpad-as-button --next-controller -l 4 --trigger-as-button --dpad-as-button"
    ;;
    4) CONTROLLER="-l 2 --trigger-as-button --dpad-as-button --next-controller -l 3 --trigger-as-button --dpad-as-button --next-controller -l 4 --trigger-as-button --dpad-as-button --next-controller -l 5 --trigger-as-button --dpad-as-button"
    ;;
    *) CONTROLLER="incorrect amount of controller specified"
    ;;
esac
